.hero
  display flex
  flex-direction column
  align-items center
  justify-content center
  height 100vh
  min-height 400px
  text-align center
  padding 2rem 1rem
  background url('../images/overlay.png'),
             url('../images/bg.jpg') no-repeat top left / auto 100%
  @media (min-width 992px)
    position fixed
    top 0
    bottom 0
    left 0
    width 35%
    text-align right
    align-items flex-end
    justify-content flex-start
    padding-top 5em
    padding-right 2rem
  @media (min-width 1100px)
    padding-right 4rem
  @media (max-width 992px)
    br
      display none
  &__avatar
    display inline-block
    width 7rem
    height @width
    margin-bottom 2rem
    img
      border-radius 50%
  &__info
    margin 0
    color rgba(white, .5)
    @media (max-width 992px)
      font-size 1.6rem
      line-height 1.8
    strong
      color #fff
      font-weight 300
